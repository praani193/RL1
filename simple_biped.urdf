<?xml version="1.0"?>
<robot name="simple_walker">

    <!-- Torso -->
    <link name="torso">
        <inertial>
            <mass value="5"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.4 0.2 0.6"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.2 0.6"/>
            </geometry>
        </collision>
    </link>

    <!-- Left Leg -->
    <link name="left_leg">
        <inertial>
            <mass value="2"/>
            <origin xyz="0 0 -0.4"/>
            <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.8"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.8"/>
            </geometry>
        </collision>
    </link>

    <!-- Right Leg -->
    <link name="right_leg">
        <inertial>
            <mass value="2"/>
            <origin xyz="0 0 -0.4"/>
            <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.8"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.8"/>
            </geometry>
        </collision>
    </link>

    <!-- Hip joint: torso to left_leg -->
    <joint name="left_hip" type="revolute">
        <parent link="torso"/>
        <child link="left_leg"/>
        <origin xyz="0.15 0 -0.3"/>
        <axis xyz="1 0 0"/>
        <limit effort="20" velocity="1" lower="-0.5" upper="0.5"/>
    </joint>

    <!-- Hip joint: torso to right_leg -->
    <joint name="right_hip" type="revolute">
        <parent link="torso"/>
        <child link="right_leg"/>
        <origin xyz="-0.15 0 -0.3"/>
        <axis xyz="1 0 0"/>
        <limit effort="20" velocity="1" lower="-0.5" upper="0.5"/>
    </joint>

</robot>