<?xml version="1.0" ?>
<robot name="simple_humanoid">

  <!-- Base / Torso -->
  <link name="torso">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="10"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
    </inertial>
    <visual>
      <geometry><box size="0.3 0.2 0.6"/></geometry>
      <origin xyz="0 0 0.3"/>
    </visual>
    <collision>
      <geometry><box size="0.3 0.2 0.6"/></geometry>
      <origin xyz="0 0 0.3"/>
    </collision>
  </link>

  <!-- ==== LEGS ==== -->
  <!-- Left Hip -->
  <joint name="left_hip" type="revolute">
    <parent link="torso"/>
    <child link="left_thigh"/>
    <origin xyz="0.1 0.1 0.2"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-1.5" upper="1.5" velocity="1.0"/>
  </joint>
  <link name="left_thigh">
    <visual><geometry><box size="0.1 0.1 0.4"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.4"/></geometry></collision>
    <inertial><mass value="2"/></inertial>
  </link>

  <joint name="left_knee" type="revolute">
    <parent link="left_thigh"/>
    <child link="left_shin"/>
    <origin xyz="0 0 -0.4"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-2.0" upper="0.5" velocity="1.0"/>
  </joint>
  <link name="left_shin">
    <visual><geometry><box size="0.1 0.1 0.4"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.4"/></geometry></collision>
    <inertial><mass value="1.5"/></inertial>
  </link>

  <!-- Right leg (mirror of left) -->
  <joint name="right_hip" type="revolute">
    <parent link="torso"/>
    <child link="right_thigh"/>
    <origin xyz="-0.1 0.1 0.2"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-1.5" upper="1.5" velocity="1.0"/>
  </joint>
  <link name="right_thigh">
    <visual><geometry><box size="0.1 0.1 0.4"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.4"/></geometry></collision>
    <inertial><mass value="2"/></inertial>
  </link>

  <joint name="right_knee" type="revolute">
    <parent link="right_thigh"/>
    <child link="right_shin"/>
    <origin xyz="0 0 -0.4"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-2.0" upper="0.5" velocity="1.0"/>
  </joint>
  <link name="right_shin">
    <visual><geometry><box size="0.1 0.1 0.4"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.4"/></geometry></collision>
    <inertial><mass value="1.5"/></inertial>
  </link>

  <!-- ==== ARMS ==== -->
  <!-- Left Shoulder -->
  <joint name="left_shoulder" type="revolute">
    <parent link="torso"/>
    <child link="left_upperarm"/>
    <origin xyz="0.2 0 0.5"/>
    <axis xyz="0 1 0"/>
    <limit effort="50" lower="-1.5" upper="1.5" velocity="1.0"/>
  </joint>
  <link name="left_upperarm">
    <visual><geometry><box size="0.1 0.1 0.3"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.3"/></geometry></collision>
    <inertial><mass value="1.0"/></inertial>
  </link>

  <!-- Left Elbow -->
  <joint name="left_elbow" type="revolute">
    <parent link="left_upperarm"/>
    <child link="left_forearm"/>
    <origin xyz="0 0 -0.3"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" lower="-1.5" upper="0.0" velocity="1.0"/>
  </joint>
  <link name="left_forearm">
    <visual><geometry><box size="0.08 0.08 0.25"/></geometry></visual>
    <collision><geometry><box size="0.08 0.08 0.25"/></geometry></collision>
    <inertial><mass value="0.8"/></inertial>
  </link>

  <!-- Right arm (mirror) -->
  <joint name="right_shoulder" type="revolute">
    <parent link="torso"/>
    <child link="right_upperarm"/>
    <origin xyz="-0.2 0 0.5"/>
    <axis xyz="0 1 0"/>
    <limit effort="50" lower="-1.5" upper="1.5" velocity="1.0"/>
  </joint>
  <link name="right_upperarm">
    <visual><geometry><box size="0.1 0.1 0.3"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.3"/></geometry></collision>
    <inertial><mass value="1.0"/></inertial>
  </link>

  <joint name="right_elbow" type="revolute">
    <parent link="right_upperarm"/>
    <child link="right_forearm"/>
    <origin xyz="0 0 -0.3"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" lower="-1.5" upper="0.0" velocity="1.0"/>
  </joint>
  <link name="right_forearm">
    <visual><geometry><box size="0.08 0.08 0.25"/></geometry></visual>
    <collision><geometry><box size="0.08 0.08 0.25"/></geometry></collision>
    <inertial><mass value="0.8"/></inertial>
  </link>

</robot>
